#!/bin/bash
do_winecfg=false
do_sound=false
do_nosound=false
while [ -n "${1:-}" ]; do
   case "${1:-}" in
     --winecfg) do_winecfg=true ;;
     --sound) do_sound=true ;;
     --disable-sound) do_nosound=true ;;
   esac
   shift
done
mtga_launcher="/home/wine/.wine/drive_c/Program Files/Wizards of the Coast/MTGA/MtgaLauncher.exe"

trap "exit" INT

run() {
    echo "${@}"
    "${@}"
}

if $do_sound; then
    run winetricks sound=pulse winegsreamer=builtin
else
    run winetricks sound=disabled winegstreamer=disabled
fi
$do_winecfg && (run winecfg ; run wineserver -kw; sleep 1)
run wineboot
run winetricks ddr=opengl
if [ ! -x "$mtga_launcher" ]; then
    echo "Installing MTGA"
    run wine /opt/mtga/MTGAInstaller.exe
    sleep 5
    pidof MTGA.exe >/dev/null
    r=$?
    if [ $r -ne 0 ]; then
        run wine "$mtga_launcher"
    fi
else
    run wine "$mtga_launcher"
fi
started=0
s=1
while :; do
    sleep $s
    pidof MTGA.exe >/dev/null
    r=$?
    if [ $started -eq 0 ] && [ $r -eq 0 ]; then
        echo "====== MTGA.exe has started."
        started=1
        s=3
    elif [ $started -eq 1 ] && [ $r -eq 1 ]; then
        echo "====== shutting down"
        run wineserver -kw
        exit
    fi
done
